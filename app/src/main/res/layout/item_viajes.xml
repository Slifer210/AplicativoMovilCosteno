<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título del servicio (Costeño VIP) -->
        <TextView
            android:id="@+id/bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costeño VIP"
            android:textColor="#888888"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Precio -->
        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="s/ 180"
            android:textColor="#FFA500"
            android:textSize="16sp" />

        <!-- Horario de Inicio y Fin -->
        <TextView
            android:id="@+id/horaSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="hora salida"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/horaSalida"
            android:text="—"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/horaLlegada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bus"
            android:layout_marginStart="42dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/horaSalida"
            android:text="hora llegada"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Duración (8h) -->
        <TextView
            android:id="@+id/duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/horaLlegada"
            android:text="8h"
            android:textColor="#888888"
            android:textSize="14sp" />

        <!-- Asientos Disponibles -->
        <TextView
            android:id="@+id/asientos_disponibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horaLlegada"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Asientos Disponibles : 14"
            android:textColor="#888888"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
